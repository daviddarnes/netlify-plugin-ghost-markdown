  "bugs": {
    "url": "https://github.com/daviddarnes/netlify-plugin-ghost-markdown/issues"
  },
  "main": "index.js",
  "maintainers": [
    {
      "name": "David Darnes",
      "email": "me@daviddarnes.com"
    }
  ],
  "scripts": {
    "clonePlugin": "copyfiles index.js package.json manifest.yml test/plugins",
